<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:top="1dp" android:right="1dp" android:bottom="4px" android:left="1dp"/>
            <stroke android:color="#12007180" android:width="1dp" />
            <corners android:radius="@dimen/_10sdp"
               />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="1px" android:right="1px" android:bottom="3px" android:left="1px"  />
            <stroke android:color="#39000000" android:width="3px" />
            <corners android:radius="@dimen/_10sdp"
               />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>

            <corners android:radius="@dimen/_10sdp" />
            <gradient
                android:angle="45"
                android:endColor="@color/errorTxtDialog"
                android:startColor="@color/spring"
                android:type="linear" />

        </shape>
    </item>
</layer-list>